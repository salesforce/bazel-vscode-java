// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Gulp Tester",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
			"args": [
				"repo_check"
			],
			"cwd": "${workspaceRoot}",
			"skipFiles": [
				"<node_internals>/**"
			],
			"console": "internalConsole",
			"stopOnEntry": false,
			"runtimeArgs": [
				"--nolazy"
			],
		},
		{
			"name": "Launch Extension - Remote Server",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceFolder}" ],
			"outFiles": [ "${workspaceFolder}/out/**/*.js" ],
			"env": {
				"SERVER_PORT": "3333",
				"DEBUG_VSCODE_JAVA":"true"
			},
			"preLaunchTask": "${defaultBuildTask}"
		},
		{
			"name": "Launch Bazel VSCode Java Extension - JDTLS Client",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"debugWebviews": true,
			"args": ["--extensionDevelopmentPath=${workspaceRoot}" ],
			"sourceMaps": true,
			"outFiles": [ "${workspaceRoot}/dist/**/*.js" ],
			"env": {
				"JDTLS_CLIENT_PORT": "5036",
				"DEBUG_VSCODE_JAVA":"true",
			},
			"preLaunchTask": "npm: watch",
			"rendererDebugOptions": {
				"urlFilter": "*redhat.java*",
				"sourceMaps": true,
			}
		},
		{
			"name": "Launch Bazel VSCode Java Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"debugWebviews": true,
			"args": ["--extensionDevelopmentPath=${workspaceRoot}" ],
			"sourceMaps": true,
			"outFiles": [ "${workspaceRoot}/dist/**/*.js" ],
			"env": {
				"DEBUG_VSCODE_JAVA":"true",
			},
			"preLaunchTask": "npm: watch",
			"rendererDebugOptions": {
				"urlFilter": "*redhat.java*",
				"sourceMaps": true,
			}
		},
		{
			"name": "Launch Bazel VSCode WITH RedHat Java Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"debugWebviews": true,
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}",
				"--extensionDevelopmentPath=${workspaceRoot}/../vscode-java"
			],
			"sourceMaps": true,
			"outFiles": [ "${workspaceRoot}/dist/**/*.js" ],
			"env": {
				"DEBUG_VSCODE_JAVA":"true",
			},
			"preLaunchTask": "npm: watch",
			"rendererDebugOptions": {
				"urlFilter": "*redhat.java*",
				"sourceMaps": true,
			}
		}
	]
}